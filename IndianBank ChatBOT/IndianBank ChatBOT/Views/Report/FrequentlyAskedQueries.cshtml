@model FrequentlyAskedQueriesViewModel

@{
    ViewData["Title"] = "Frequently Asked Queries";
}

<script type="text/javascript">
    function formatDate(date, type) {
        var current_datetime, formatted_date;
        switch (type) {
            case "mm-dd-yyyy":
                current_datetime = new Date(date);
                formatted_date = (current_datetime.getMonth() + 1) + "-" + current_datetime.getDate() + "-" + current_datetime.getFullYear();
                break;
            case "yyyy-mm-dd":
                current_datetime = new Date(date);
                formatted_date = current_datetime.getFullYear() + "-" + (current_datetime.getMonth() + 1) + "-" + current_datetime.getDate();
                break;
            default:
        }
        return formatted_date;
    }

    $(function () {
        var from_date = '@Model.From';
        var to_date = '@Model.To';

        from_date = from_date.split("-")[1] + "-" + from_date.split("-")[0] + "-" + from_date.split("-")[2];
        to_date = to_date.split("-")[1] + "-" + to_date.split("-")[0] + "-" + to_date.split("-")[2];
        $("#datepicker_from").datepicker({
            autoclose: true,
            todayHighlight: true
        }).datepicker('update', formatDate(from_date, "mm-dd-yyyy"));

        $("#datepicker_to").datepicker({
            autoclose: true,
            todayHighlight: true
        }).datepicker('update', formatDate(to_date, "mm-dd-yyyy"));

        $("#from_date_input").change(function () {
            from_date = formatDate(this.value, "mm-dd-yyyy");
            var startDate = new Date(this.value);
            $('#datepicker_to').datepicker('setStartDate', startDate);
        });

        $("#to_date_input").change(function () {
            to_date = formatDate(this.value, "mm-dd-yyyy");
             var toDate = new Date(this.value);
             $('#datepicker_from').datepicker('setEndDate', toDate);
        });

        $('#filter_btn').click(function () {
            var fdate = formatDate(from_date, "yyyy-mm-dd");
            var tdate = formatDate(to_date, "yyyy-mm-dd");
            window.location.href = "/Report/FrequentlyAskedQueries?from=" + fdate + "&to=" + tdate;
        });
    });
</script>

<div class="section-header">
    <div class="col-lg-4 col-md-6 col-sm-6 col-12">
        <h1>Frequently Asked Queries</h1>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-6 col-12">
        <form class="form-inline" role="form">
            <div class="form-group">
                <label for="From">From</label>   &nbsp;
                <div id="datepicker_from" class="input-group date" data-date-format="mm-dd-yyyy" data-date-end-date="0d">
                    @*<span class="input-group-addon" id="addon-event">From </span>*@
                    <input class="form-control" type="text" id="from_date_input" />
                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                </div>
            </div>
            &nbsp;
            &nbsp;
            <div class="form-group">
                <label for="To">To</label>   &nbsp;
                <div id="datepicker_to" class="input-group date" data-date-format="mm-dd-yyyy" data-date-end-date="0d">
                    @*<span class="input-group-addon" id="addon-event">To </span>*@
                    <input class="form-control" type="text" id="to_date_input" />
                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-2 col-md-6 col-sm-6 col-12">
        <button type="button" id="filter_btn" class="btn btn-primary">Filter</button>
    </div>
</div>

<div class="section-body">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Report</h4>
                    <div class="card-stats">
                        <div class="card-stats-items">
                            @{
                                var fromDate = Model.From;
                                var toDate = Model.To;
                                var totalHits = Model.FrequentlyAskedQueries.Sum(q => q.Count);
                                var positiveFeedbacks = Model.FrequentlyAskedQueries.Sum(q => q.PositiveFeedback);
                                var negetiveFeedbacks = Model.FrequentlyAskedQueries.Sum(q => q.NegetiveFeedback);
                            }
                            <div class="card-stats-item">
                                <div class="card-stats-item-label">Total Hits</div>
                                <div class="card-stats-item-count">
                                    @totalHits
                                </div>
                            </div>

                            <div class="card-stats-item">
                                <div class="card-stats-item-label">Total Positive Feedbacks</div>
                                <div class="card-stats-item-count">
                                    @positiveFeedbacks
                                </div>
                            </div>

                            <div class="card-stats-item">
                                <div class="card-stats-item-label">Total Negetive Feedbacks</div>
                                <div class="card-stats-item-count">
                                    @negetiveFeedbacks
                                </div>
                            </div>
                            <div class="card-stats-item">
                                <div class="card-stats-item-label">From</div>
                                <div class="card-stats-item-count">
                                    @fromDate
                                </div>
                            </div>
                            <div class="card-stats-item">
                                <div class="card-stats-item-label">To</div>
                                <div class="card-stats-item-count">
                                    @toDate
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-md">
                            <thead>
                                <tr>
                                    <th style="text-align:right">
                                        S No.
                                    </th>
                                    <th>
                                        Visitor Query
                                    </th>
                                    <th style="text-align:right">
                                        Hits
                                    </th>
                                    <th style="text-align:right">
                                        Positive Feedback
                                    </th>
                                    <th style="text-align:right">
                                        Negetive Feedback
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var index = 0;
                                }
                                @foreach (var item in Model.FrequentlyAskedQueries)
                                {
                                    {
                                        index += 1;
                                    }
                                    <tr>
                                        <td style="text-align:right">@index</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Query)
                                        </td>
                                        <td style="text-align:right">
                                            @Html.DisplayFor(modelItem => item.Count)
                                        </td>
                                        <td style="text-align:right">
                                            @Html.DisplayFor(modelItem => item.PositiveFeedback)
                                        </td>
                                        <td style="text-align:right">
                                            @Html.DisplayFor(modelItem => item.NegetiveFeedback)
                                        </td>
                                    </tr>
                                }

                                @if (Model.FrequentlyAskedQueries.Count == 0)
                                {
                                    <tr class="no-data" style="text-align:center">
                                        <td colspan="5">No data found !</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
