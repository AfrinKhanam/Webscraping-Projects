<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BackEnd</title>
    <script type="text/javascript" src="~/lib//jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/bootstrap-datepicker/bootstrap-datepicker_1.3.css" rel="stylesheet" type="text/css" />
    <script src="~/lib/bootstrap-datepicker/bootstrap_datepicker.js"></script>
</head>

<body class="scroll-enable">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ib-yellow-border">
           <a class="navbar-brand" asp-area="" asp-controller="Report" asp-action="Index">
                    <img src="~/lib/images/logo.jpg" width="30" height="30" class="d-inline-block align-top" alt="Indian Bank">
                    Indian Bank - Backend
                </a>
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" asp-area="" asp-controller="Synonyms" asp-action="Index">Synonyms <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="StaticFiles" asp-action="Index">
                    Static Files</a>
      </li>
  
    </ul>
  </div>
          
      
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    @RenderSection("Scripts", required: false)

    <style>
        .scroll-enable {
            overflow: scroll;
        }


        .color-black {
            color: black;
        }

            .color-black.active {
                /*font-weight:bold;*/
            }

        .navbar-ib {
            background-color: #0c4da2
        }

        .ib-yellow-border {
            border-bottom: 1px solid #e0a800 !important;
        }

        .nav-tabs {
            width: 100%;
        }

        .example-table td {
            padding: 30px;
        }

        .example-table th {
            padding: 30px;
        }

        .sub-table {
            width: 100%;
            background-color: #00245f;
            transition: display 0s, opacity 2s linear;
        }

            .sub-table th {
                font-size: 14px;
                color: white;
            }

            .sub-table td {
                font-size: 13px;
            }

        .btn-hover {
            cursor: pointer !important;
        }

        .report-heading {
            font-size: 18px;
            font-weight: bold;
        }

            .report-heading:hover {
                color: black;
            }

        .color-black {
            color: black;
        }

        label.date_label {
            margin-left: 20px;
        }

        #datepicker_from, #datepicker_to {
            width: 180px;
            margin: 0 20px 20px 20px;
        }

            #datepicker_from, #datepicker_to > span:hover {
                cursor: pointer;
            }

        .form-control:disabled, .form-control[readonly] {
            background-color: transparent;
            opacity: 1;
        }
    </style>

</body>
</html>
