@model WebScrapeConfigViewModel
@{
    ViewData["Title"] = "AddNew";
    Layout = "_Layout";
}

<div class="section-header">
    <div class="col-lg-4 col-md-6 col-sm-6 col-12">
        <h1>Add New WebPage</h1>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-6 col-12">

    </div>
    <div class="col-lg-2 col-md-6 col-sm-6 col-12">
    </div>
</div>

@{
    ViewData["Title"] = "Add New Web Page";
    string insertWebPageStatus = ViewBag.InsertWebPageStatus as string;

    if (string.IsNullOrEmpty(insertWebPageStatus))
    {
        insertWebPageStatus = string.Empty;
    }
}

@if (!string.IsNullOrEmpty(insertWebPageStatus))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success.</strong> @insertWebPageStatus
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@using (Html.BeginForm("AddNew", "WebPage", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Add New Web Page</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Page Name</label>
                            @Html.TextBoxFor(m => m.WebScrapeConfig.PageName, new { @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.WebScrapeConfig.PageName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Description</label>
                            @Html.TextBoxFor(m => m.WebScrapeConfig.Description, new { @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.WebScrapeConfig.Description, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Page Url</label>
                            @Html.TextBoxFor(m => m.WebScrapeConfig.Url, new { @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.WebScrapeConfig.Url, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Select the Language</label>
                            @Html.DropDownListFor(m => m.WebScrapeConfig.LanguageId,Model.Languages, new { @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.WebScrapeConfig.LanguageId, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Scrape Config</label>
                            @Html.TextAreaFor(m => m.WebScrapeConfig.PageConfig, new { @class = "form-control", @rows = 10, style = "height:100% !important;" })
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <button class="btn btn-primary mr-1" type="submit">Create</button>
                        <button class="btn btn-secondary" type="reset">Reset</button>
                        <button type="button" class='btn btn-secondary' onclick='location.href="@Url.Action("Index", "WebPage")"'>Back To List</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
